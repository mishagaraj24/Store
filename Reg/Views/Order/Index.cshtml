@model IEnumerable<Order>

<h1>All Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Order Date</th>
            <th>Is Completed</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User.UserName</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.IsCompleted ? "Yes" : "No"</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Details", "Order", new { id = order.Id })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
